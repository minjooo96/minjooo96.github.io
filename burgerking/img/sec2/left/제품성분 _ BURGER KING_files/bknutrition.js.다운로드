$(document).ready(function(){

	$('#content ul li h3 a:first').css({'color':'#bb221a', 'background-color':'#ffffff'});
	$('#content ul li h3 a').click(function(){
	
		var idx = $('#content ul li h3 a').index(this);
		
		if(idx == 0){
			$('#content ul li h3 a:first').css({'color':'#bb221a', 'background-color':'#ffffff'});
			$('#content ul li h3 a:last').css({'color':'#ffffff', 'background-color':'#9c1008'});
			$('#content .cont01').show();
			$('#content .cont02').hide();
		}
		else{
		
			$('#content ul li h3 a:first').css({'color':'#ffffff' , 'background-color':'#9c1008'});
			$('#content ul li h3 a:last').css({'color':'#bb221a', 'background-color':'#ffffff'});
			$('#content .cont01').hide();
			$('#content .cont02').show();
		}		
	});
	
	$('#accordion_top01 div').slideUp().eq(0).slideDown(0);
	$('#accordion_top01 h4').click(function(e){
	
		var idx = $('#accordion_top01 h4').index(this);

		if($('#accordion_top01 div').eq(idx).is(':hidden')){
			$('#accordion_top01 div').slideUp(250).eq(idx).slideDown(250);
			//$('#accordion_top01 div').eq(idx).slideDown(250);
		}
		else{
			$('#accordion_top01 div').eq(idx).slideUp(250);
		}
		
		
		 e.preventDefault();
	});
 
 	$('#accordion_top02 div').slideUp().eq(0).slideDown(0);
	$('#accordion_top02 h4').click(function(e){
	
		var idx = $('#accordion_top02 h4').index(this);

		if($('#accordion_top02 div').eq(idx).is(':hidden')){
			$('#accordion_top02 div').slideUp(250).eq(idx).slideDown(250);
			//$('#accordion_top02 div').eq(idx).slideDown(250);
		}
		else{
			$('#accordion_top02 div').eq(idx).slideUp(250);
		}
		
		 e.preventDefault();
	});
 
 
	GetNutrition();
});

function GetNutrition(){

	$.ajax({
			url: '/api/nutri/',
			type: 'GET',
			dataType: 'json',
			async: false,
			success: function (data) {
				
				var burgerHtml = '';
				var drinkHtml = '';
				var sideHtml = '';
				var morningHtml = '';
				
				var results = '';						
			
					for(var a=0; a < data.length; a++){

						
						if(data[a].GroupSQ == 1){
							burgerHtml += NutritionHtml(data[a]);
							
						}
						
						if(data[a].GroupSQ == 2){
							morningHtml += NutritionHtml(data[a]);
						}
						
						if(data[a].GroupSQ == 3){
							sideHtml += NutritionHtml(data[a]);
						}
						
						if(data[a].GroupSQ == 4){
							drinkHtml += NutritionHtml(data[a]);
						}
					}
				
				 
				 $('#tbBurger').append(burgerHtml);
				 $('#tbDrink').append(drinkHtml);
				 $('#tdSnack').append(sideHtml);
				 $('#tdBreakfast').append(morningHtml);
				
			},
			error: function (x, y, z) {
				alert(x + '\n' + y + '\n' + z);
			}
		});

}

function NutritionHtml(data){

	var html = '<tr>';	
	html += '<td class="bor_rt_bottom">'+ data.FoodNM +'</td>';
	html += '<td class="bor_rt_bottom">'+ data.Weight +'</td>';
	html += '<td class="bor_rt_bottom">'+ data.Calorie +'</td>';
	html += '<td class="bor_rt_bottom">'+ data.Protein +'<span>('+ data.ProteinEN +')</span></td>';
	html += '<td class="bor_rt_bottom">'+ data.Natrium +'<span>('+ data.NatriumEN +')</span></td>';	
	html += '<td class="bor_rt_bottom">'+ data.Sugar +'</td>';
		
	if(data.GroupSQ == 3 || data.GroupSQ == 4){
		html += '<td class="bor_rt_bottom">'+ data.SaturatedFat +'<span>('+ data.SaturatedFatEN +')</span></td>';
		html += '<td class="bor_bottom">'+ data.Caffein +'</td>';
	}
	else{
		html += '<td class="bor_bottom">'+ data.SaturatedFat +'<span>('+ data.SaturatedFatEN +')</span></td>';
	}
	
	html += '</tr>';
	
	return html;
}
